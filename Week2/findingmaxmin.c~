*/
#include <stdio.h> /*including hetero file stdio.h*/
int main()
{
int a,b,c; /* declaring the variables as integers*/
int max,min;
printf("enter the numbers:");
scanf("%d,%d,%d",&a,&b,&c);/*reading three numbers from user*/
max=a;
min=max;
if(b>max)
max=b;
else min=b;
if(c<min)
min=c;
if(c>max)
max=c;
printf("%d%d",max,min);
}
